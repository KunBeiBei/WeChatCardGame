<view class="score">
<view class="bg" bindtap='hideview' style='display:{{display}}'>
</view>
<view class="show" bindtap='hideview' style='display:{{display}}'>
    <image class="showw" src='http://202.104.22.2:60199/timg.gif'></image>
    </view>
    <view class="scoredetail">
        <view class="scoredesc">时间</view>
        <view class="scorenumber">{{useTimes}}</view>
    </view>
    <view class="scoredetail">
        <view class="scoredesc">点击次数</view>
        <view class="scorenumber">{{clickNum}}</view>
    </view>
   </view>
<view class="">
  <view class="board" >
    <view class="rows" wx:for="{{cards}}" wx:for-index="idx" wx:for-item="row" wx:key="xxx">
        <view wx:for="{{row}}" class="cols"   wx:for-index="idy"  wx:for-item="card" wx:key="xxx"> 
            <view  class="" data-ix="{{idx}}"  data-iy="{{idy}}"  bindtap="onTap" >
                <image class="card" style="display:{{card.state == 0 ? 'none' : 'block'}}" mode="scaleToFill" src= "{{card.src}}" data-card="{{card}}"></image>
                <image class="card back" style="display:{{card.state != 0 ? 'none' : 'block'}}" mode="scaleToFill" src= "../images/cardbg.jpg" ></image>
            </view>
        </view>
    </view>
    </view>
</view>
    
    