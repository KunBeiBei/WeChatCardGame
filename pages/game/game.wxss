.score {
  display: flex;
  font-size: 1vh;
}
.bg{
  display: none; 
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  /* background:url('../images/fff.png');  */
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
.show {
  display: none;
  text-align: center;
  position: absolute;
  top: 35%;
  left: 24.5%;
  width: 53%;
  height: 30%;
  padding: 8px;
  z-index: 1002;
  overflow: auto;
}
.showw{
  width: 100%;
  height: 100%;
}
